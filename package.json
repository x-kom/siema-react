{
    "name": "siema-react",
    "version": "0.0.7",
    "description": "React binding to lightweight slider library named Siema",
    "main": "dist/siema-react.js",
    "types": "./tsc/src/lib/siema-react.d.ts",
    "scripts": {
        "open:src": "webpack-dev-server --colors --open --config webpack/dev.ts",
        "start": "npm run open:src",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "prebuild": "tsc",
        "build": "./node_modules/.bin/babel ./tsc/src/lib --presets babel-preset-es2015 --out-dir ./dist && npm pack",
        "publish": "npm publish"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aczekajski/siema-react.git"
    },
    "keywords": [
        "react",
        "siema",
        "slider",
        "carousel"
    ],
    "author": "arkadiusz.czekajski@x-kom.pl",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/aczekajski/siema-react/issues"
    },
    "homepage": "https://github.com/aczekajski/siema-react#readme",
    "dependencies": {
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "siema": "x-kom/siema#1792a5b659255af46beda54bb23c240eda78993b"
    },
    "devDependencies": {
        "@types/enzyme": "^3.1.8",
        "@types/jest": "^22.0.1",
        "@types/react": "^16.0.34",
        "@types/react-dom": "^16.0.3",
        "@types/webpack-env": "^1.13.3",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "awesome-typescript-loader": "3.4.1",
        "babel-cli": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "html-webpack-plugin": "2.30.1",
        "jest": "22.0.4",
        "react-hot-loader": "3.0.0-beta.7",
        "styled-components": "^2.4.0",
        "ts-jest": "22.0.4",
        "ts-node": "^4.0.2",
        "tslint": "5.8.0",
        "tslint-consistent-codestyle": "1.11.0",
        "tslint-eslint-rules": "4.1.1",
        "tslint-immutable": "4.5.0",
        "tslint-microsoft-contrib": "5.0.1",
        "tslint-react": "3.2.0",
        "typescript": "^2.6.2",
        "url-loader": "0.6.2",
        "webpack": "3.10.0",
        "webpack-dev-server": "2.9.7",
        "webpack-hot-middleware": "2.21.0"
    },
    "files": [
        "dist",
        "tsc/src/lib/siema-react.d.ts"
    ]
}
